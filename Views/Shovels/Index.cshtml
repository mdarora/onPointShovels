@model OnPointShovels.Models.ShovelTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <form asp-controller="Shovels" asp-action="Index">
        <p>
            <select asp-for="ShovelType" asp-items="Model.Types">
                <option value="">All</option>
            </select>

            Title: <input type="text" asp-for="SearchString" />
            <input type="submit" value="Filter" />
        </p>
    </form>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shovels[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shovels[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shovels[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shovels[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shovels[0].Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shovels[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shovels[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Shovels)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
